<Window x:Class="LAB01.IngresosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB01"
        mc:Ignorable="d"
        Title="Registro de Ingresos" Height="700" Width="850" WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F0F0">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="60">
                <TextBlock Text="Registro de Ingresos" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,40"/>
                
                <!-- TipoDocumento (Desplegable) -->
                <TextBlock Text="Tipo de Documento:" Margin="0,10,0,5" FontSize="16"/>
                <ComboBox x:Name="cmbTipoDocumento" Height="40" Padding="10,5" FontSize="16" Margin="0,0,0,15">
                    <ComboBoxItem Content="DNI" IsSelected="True"/>
                    <ComboBoxItem Content="Carnet de Extranjería"/>
                    <ComboBoxItem Content="Pasaporte"/>
                    <ComboBoxItem Content="Licencia de Conducir"/>
                </ComboBox>
                
                <!-- Numero Documento -->
                <TextBlock Text="Número de Documento:" Margin="0,10,0,5" FontSize="16"/>
                <TextBox x:Name="txtNumeroDocumento" Height="40" Padding="10,5" FontSize="16" Margin="0,0,0,15"/>
                
                <!-- Placa -->
                <TextBlock Text="Placa del Vehículo:" Margin="0,10,0,5" FontSize="16"/>
                <TextBox x:Name="txtPlaca" Height="40" Padding="10,5" FontSize="16" Margin="0,0,0,15"/>
                
                <!-- Turno -->
                <TextBlock Text="Turno:" Margin="0,10,0,5" FontSize="16"/>
                <ComboBox x:Name="cmbTurno" Height="40" Padding="10,5" FontSize="16" Margin="0,0,0,15">
                    <ComboBoxItem Content="Mañana" IsSelected="True"/>
                    <ComboBoxItem Content="Tarde"/>
                    <ComboBoxItem Content="Noche"/>
                </ComboBox>
                
                <!-- Nombre Conductor -->
                <TextBlock Text="Nombre del Conductor:" Margin="0,10,0,5" FontSize="16"/>
                <TextBox x:Name="txtNombreConductor" Height="40" Padding="10,5" FontSize="16" Margin="0,0,0,15"/>
                
                <!-- Nombre Cliente -->
                <TextBlock Text="Nombre del Cliente:" Margin="0,10,0,5" FontSize="16"/>
                <TextBox x:Name="txtNombreCliente" Height="40" Padding="10,5" FontSize="16" Margin="0,0,0,15"/>
                
                <!-- Fecha y Hora -->
                <TextBlock Text="Fecha y Hora:" Margin="0,10,0,5" FontSize="16"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <DatePicker x:Name="dpFecha" Grid.Column="0" Height="40" Padding="10,5" FontSize="16" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtHora" Grid.Column="1" Height="40" Padding="10,5" FontSize="16" Margin="5,0,0,0" Text="00:00"/>
                </Grid>
                
                <!-- Peso de Ingreso -->
                <TextBlock Text="Peso de Ingreso (kg):" Margin="0,10,0,5" FontSize="16"/>
                <TextBox x:Name="txtPesoIngreso" Height="40" Padding="10,5" FontSize="16" Margin="0,0,0,25"/>
                
                <!-- Botones -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="btnGuardar" Content="Guardar" Width="150" Height="50" Background="#2ECC71" Foreground="White" FontSize="18" Margin="0,0,20,0"/>
                    <Button x:Name="btnCancelar" Content="Cancelar" Width="150" Height="50" Background="#E74C3C" Foreground="White" FontSize="18" Margin="20,0,0,0" Click="BtnCancelar_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
