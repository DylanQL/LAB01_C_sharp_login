<Window x:Class="LAB01.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB01"
        mc:Ignorable="d"
        Title="Menú Principal" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F0F0">
        <StackPanel Margin="40" VerticalAlignment="Center">
            <TextBlock Text="Menú Principal" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>
            
            <Button x:Name="btnOperaciones" Content="Operaciones" Height="50" Margin="0,10,0,10" Background="#2ECC71" Foreground="White" FontSize="16"/>
            
            <Button x:Name="btnMantenimientos" Content="Mantenimientos" Height="50" Margin="0,10,0,10" Background="#3498DB" Foreground="White" FontSize="16"/>
            
            <Button x:Name="btnReportes" Content="Reportes" Height="50" Margin="0,10,0,10" Background="#9B59B6" Foreground="White" FontSize="16"/>
            
            <Button x:Name="btnCerrarSesion" Content="Cerrar Sesión" Height="40" Margin="0,30,0,0" Background="#E74C3C" Foreground="White" FontSize="14" Click="BtnCerrarSesion_Click"/>
        </StackPanel>
    </Grid>
</Window>
